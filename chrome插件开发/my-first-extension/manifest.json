{
  "manifest_version": 3, 
  "name": "我的第一个插件",
  "version": "1.0",

  "description": "一个简单的 Chrome 插件示例",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "点击打开弹窗"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "activeTab", 
    "storage",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}