{
  "manifest_version": 3,
  "name": "简单翻译助手",
  "version": "1.0.0",
  "description": "选中文本快速翻译",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["content.css"]
  }],
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}
